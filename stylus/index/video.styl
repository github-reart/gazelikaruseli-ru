.video
  background url($url "/images/bg-video1.png") 50% 0%, url($url "/images/bg-video2.png") 50% 15%
  height 460px
  margin 41px 0 41px 0
  -webkit-box-shadow 0px 1px 10px 1px rgba(0,0,0,0.75)
  -moz-box-shadow 0px 1px 10px 1px rgba(0,0,0,0.75)
  box-shadow 0px 1px 10px 1px rgba(0,0,0,0.75)
  &__left
    float left
    width 680px
    margin-left 30px
  &__right
    float left
  &__next-video
    margin-bottom 13px
  &__next-video-header
    font-family $font
    float right
    width 220px
    margin-top 45px
    margin-left 20px
    font-weight 400
    color $second-font-color
  &--small
    width 264px
    height 230px
    padding 0
    float left