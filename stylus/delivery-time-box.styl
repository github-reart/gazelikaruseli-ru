.delivery-time-box
  width 698px
  height 80px
  background #f6f6f6
  margin 0 auto
  padding-top 20px
  border-radius 5px
  margin-bottom 30px

  &__delivery-time
    margin-left 30px
    float left

  &__delivery-price
    margin-right 30px
    float right

  &__text
    color #555555
    font-size $font-size+2
    font-family $font
    font-weight 400
    margin-bottom 10px

  &__date,
  &__time
    width 128px
    height 34px
    border 1px solid #DDDDDD
    border-radius 5px