.btn
  width 90px
  height 40px
  border-radius 3px 3px 3px 3px
  border 1px solid $border-color
  margin-left -4px
  font-size $font-size+2
  color $base-font-color
  line-height 20px
  text-align center
  text-transform uppercase
  padding 0
  background $white
  font-family $font

  &--blue
    display inline-block
    text-decoration none
    background #00a2e5
    color $white
    font-size $font-size+1
    box-shadow 0px 1px 3px 0px rgba(0, 0, 0, 0.15)
    -webkit-box-shadow 0px 1px 3px 0px rgba(0, 0, 0, 0.15)
    -moz-box-shadow 0px 1px 3px 0px rgba(0, 0, 0, 0.15)
    border 1px solid #00a2e5
    margin 0
    padding 0
    height 30px
    width 98px
    line-height 32px

  &--blue-inverse
    background #FFFFFF
    color #00a2e5


  &--search
    border-radius 0 3px 3px 0
    font-family $font
    font-weight 500

  &--link
    padding 10.5px 14px 10.5px 14px
    margin-left 10px
    position relative
    top -1px
    text-transform none
    text-decoration none
    font-family $font
    font-weight 400

  &--filter
    width 180px
    height 35px
    padding 0px
    margin 0px
    text-align center
    line-height 35px
    font-size $font-size+1
    color $white
    background none
    text-transform uppercase
    font-family $font !important
    font-weight 500

  &--buy
    width 102px
    height 38px
    line-height 38px
    color #fff
    background #e7582a
    padding 0
    margin 0
    border 0
    border-radius 5px
    float right
    font-family $font
    font-weight 500

  &--product-grid
    float left

  &--sendmail
    position relative
    top -1px
    font-family $font
    font-size $font-size+1
    width 122px
    height 38px
    line-height 38px
    color #fff
    background #e7582a
    padding 0
    margin 0
    border 0
    border-radius 5px

  &--pl-buy
    width 120px
