.p-char-details
  &__char-text
    font-size $font-size+2
    font-family  $font
    color #555555
    margin-bottom 15px
    background #FFFFFF
    float left
    z-index 1
    position relative
    padding-right 2px


  &__char-dot
    background-image url(/carousel/images/bg-dot.png)
    background-position 50% 62%
    background-repeat-y no-repeat
    position relative
    width 340px
    height 1px
    top 10px

  &__char-value
    background #FFFFFF
    font-size $font-size+2
    font-family  $font
    color #555555
    text-align left
    float right
    z-index 1
    position relative
    padding-left 2px

  &__tab
    height 50px
    margin-top 30px
    float left

  &__row
    width 388px
    height 100%

  &__tab-title
    font-size $font-size+ 8
    font-family $font
    color $second-font-color

  &__section
    display none
    background #fff
    width 100%
    height 100%

#tab1:checked ~ #content-tab1, #tab2:checked ~ #content-tab2, #tab3:checked ~ #content-tab3, #tab4:checked ~ #content-tab4
  display block

#tab1 ~ #content-tab1, #tab2 ~ #content-tab2, #tab3 ~ #content-tab3, #tab4 ~ #content-tab4
  display: none

.p-char-details__tab-input
  display none
  position absolute

.p-char-details__tab-label
  display block
  float left
  text-align center
  font-size $font-size+ 8
  font-family $font
  color $second-font-color
  background #f3f3f3
  height 50px
  line-height 50px
  border 0
  padding 0 29px

.p-char-details__tab-label--active
  display block
  float left
  text-align center
  font-size $font-size+ 8
  font-family $font
  color $second-font-color
  background #f3f3f3
  height 45px
  line-height 50px
  border-bottom 5px solid #7cbb22
  padding 0 29px

.p-char-details__title
  font-weight 400
  font-family $font

.p-char-details__title--dashed
  border-bottom 1px dashed $second-font-color
  font-weight 400
  font-family $font

.p-char-details__content-tab
  float left
  margin-top 41px
  height 443px
  width 340px

