.coupon
  background #faf7ef
  margin-top 30px
  width 450px
  height 80px
  border-radius 5px
  line-height 80px
  float left

  &__input
    width 175px
    height 36px
    border 1px #DDDDDD
    padding-left 12px
    font-weight 400
    font-family $font
    font-size $font-size+2
    color #999999
    margin-left 31px

  &__input--page-checkout
    margin-left 0
    width 165px
  &__link
    margin-left 14px
  &__icon-star
    position relative
    left  20px
    top 16px
    float none


