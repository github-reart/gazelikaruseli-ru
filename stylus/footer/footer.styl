.footer
  height 380px
  background $footer-color
  font-family $font
  &__hr
    border-top 1px solid #38435f
    width 100%
    border-bottom 0
    border-left 0
    border-right 0
    position relative
    top 35px
  &__copyright-block
    position relative
    top 55px
  &__copyright
    color #CCCCCC
    font-size $font-size+1
    font-family $font
    margin-bottom 10px
    font-weight 400
  &__politic
    color $white
    font-size $font-size+1
    font-family $font
    text-decoration none
    font-weight 400
  &__social
    float right
    line-height 42px
    margin-top: 20px
  &__social-text
    font-size $font-size+1
    font-family $font
    text-transform uppercase
    float left
    color $white
    font-weight 400