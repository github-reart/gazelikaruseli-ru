.footer-form
  padding-top 30px
  margin-left 70px
  float left
  &__title
    color $footer-title-color
    font-size $font-size+2
    text-transform uppercase
    padding-top 10px
    margin-bottom 20px
    font-weight 400
    &--sendmail
      margin-bottom 10px
  &__phone
    font-family $font
    font-size $font-size+14
    color $white
    font-weight 400
  &__phone-description
    font-family $font
    font-size $font-size
    color $white
    margin-bottom 20px
  &__sendmail-description
    font-family $font
    font-size $font-size+2
    color $white
  &__input
    margin-left 15px
    border 0px
    width 210px
    height 36px
    line-height 36px
    padding-left  10px
    border-radius 5px
    font-weight 400