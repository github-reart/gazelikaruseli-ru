.page-cart
  &__product-cart
    border 1px solid #DDDDDD
    border-radius 5px
  &__th
    font-family $font
    font-size $font-size+2
    color #888888
    font-weight 400
    border-bottom 1px solid #DDDDDD
    float left
  &__product-th
    width 680px
    padding-left 20px
    float left
  &__price-th
    width 135px
  &__qty-th
    width 130px
  &__cart-th
    height 50px
    line-height 50px
    margin-bottom 30px
  &__sum-th
    width 181px

  &__product-img
    float left
    margin 0 25px 25px 35px
  &__product-info
    float left
    width 555px

  &__price-info
    float left
    width 135px

  &__product-title
    font-family $font
    font-size 16px
    color $second-font-color
    margin-bottom 17px

  &__qty-info
    float left
    width 130px

  &__qty-wrapper
    border 1px solid #ccecfa
    border-radius 5px
    width 90px

  &__sum-info
    float left

  &__qty-col
    width 30px
    height 30px
    display inline-block
    text-align center
    line-height 30px
    color #ccecfa

  &__qty-value
    color $second-font-color
    font-size $font-size+6
    font-family $font
    font-weight 400

  &__more
    float left

  &__favorite
    float none
    display block
    position relative
    left 48px

  &__delete
    float none
    display block
    position relative
    left 48px
    margin-bottom 30px
    top 5px

  &__product
    border-bottom 1px solid #DDDDDD
    margin-bottom 30px
    &:last-child
      margin-bottom 0

  &__cart-box
    float right
    margin-right 20px
    width 322px
    height 222px
    background url($url"/images/cart-checkout-bg.png") no-repeat 50% 50%
    margin-bottom 80px

  &__btn-buy
    margin-left 20px

  &__products-sum
    margin-bottom 27px
    padding-left 19px
    padding-right 39px

  &__in-total
    padding-left 19px
    padding-right 39px

  &__products-sum-text
    font-family $font
    font-size $font-size+4
    color #555555
    font-weight 400
    float left
    margin-top 40px

  &__products-sum-price
    font-family $font
    font-size $font-size+14
    color $second-font-color
    font-weight 400
    margin-top 33px
    float right

  &__in-total-text
    font-family $font
    font-size $font-size+4
    color #555555
    font-weight 400
    text-transform uppercase
    margin-top 30px
    float left

  &__in-total-price
    font-family $font
    font-size $font-size+18
    color $second-font-color
    margin-top 22px
    float right