.pg-video
  width 854px
  height 321px
  background url($url "/assets/images/bg-video1.png") 50% 0%, url($url "/assets/images/bg-video2.png") 50% 15%
  -webkit-box-shadow 0px 1px 10px 1px rgba(0,0,0,0.75)
  -moz-box-shadow 0px 1px 10px 1px rgba(0,0,0,0.75)
  box-shadow 0px 1px 10px 1px rgba(0,0,0,0.75)
  margin-left 25px
  margin-bottom 107px
  &__title
    font-size $font-size+2
    font-family $font
    color $second-font-color

  &__header
    font-family $font
    font-size 26px
    padding-top 30px
    margin 0
    margin-left 26px
    font-weight 400
    color $second-font-color

  &__video-wrapper
    width 805px
    margin 0 auto
    padding-top 21px
  &__img
    margin-bottom 15px
  &__source
    float left
    width 247px
    margin-left 16px
    margin-right 16px
    &:first-child
      margin-left 0px
    &:last-child
      margin-right 0px
