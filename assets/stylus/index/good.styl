.good
  width 263px
  height 333px
  border 1px solid #dddddd
  float left
  position relative
  margin-left 14.5px
  margin-right 14.5px
  text-align center

  &:first-child
    margin-left 0
    margin-right 14.5px
  &:last-child
    margin-right 0
    margin-left 14.5px
  &:hover
    box-shadow 0px 4px 6px 0px rgba(0, 0, 0, 0.15)

  &--no-border
    border none
    &:hover
      box-shadow none

  &--product-grid
    width 263px
    height 433px
    border 1px solid #ddd
    &:first-child
      margin-left 0
      margin-right 14.5px
    &:last-child
      margin-right 0
      margin-left 14.5px

  &__header
    color #000000
    font-family $font
    font-size $font-size+2
    padding-left 10px
    text-align left
    padding-right 15px
    height 33px

  &__header--product-grid
      height auto
      margin-bottom 27px

  &__link
    height 33px
    color $second-font-color

  &__img
    clear both

  &__price
    font-family $font
    font-size $font-size+10
    float left
    color $second-font-color
    font-weight 500

  &__currency
    font-weight 500
    font-size $font-size+4

  &__price--product-grid
    float none

  &__cart-wrapper
    margin-top 20px
    margin-left 10px
    margin-right 10px
    height 38px
    line-height 38px

  &__img-wrapper
    min-height 203px

  &__img-wrapper--product-grid
    margin 17px 23px 17px 23px

  &__cart-wrapper--product-grid
    margin-top 0px
    text-align left