.main-menu
  font-family $font
  width 267px

  &__container
    background $white
    border 1px solid #d9d9d9
    border-radius 3px
    float left
    list-style none
    width 265px
    -webkit-padding-start 0px
    margin 20px 0 0 0
    padding 0

    &--p-product
      margin-top 22.5px

  &__title
    font-size $font-size+4
    color $white
    background #212e4d
    height 40px
    line-height 40px
    text-transform uppercase
    padding-left 15px
    border-radius 3px
    font-family $font
    font-weight 500

  &__item
    margin-left 15px
    font-size $font-size+3
    margin 12.5px

  &__link
    text-decoration none
    color #3f4647
    cursor pointer