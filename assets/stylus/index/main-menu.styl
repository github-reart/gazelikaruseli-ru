.main-menu
  font-family $font
  width 267px

  &__container
    background $white
    border 1px solid #d9d9d9
    border-radius 3px
    float left
    list-style none
    width 265px
    -webkit-padding-start 0px
    margin 20px 0 0 0
    padding 0

    &--p-product
      margin-top 22.5px

  &__title
    font-size $font-size+4
    color $white
    background #212e4d
    height 40px
    line-height 40px
    text-transform uppercase
    padding-left 15px
    border-radius 3px
    font-family $font
    font-weight 500

  &__item
    font-size $font-size+3
    padding 12.5px
    &:hover
      background #f2f2f2

  &__link
    text-decoration none
    color #3f4647
    cursor pointer
    font-weight 500
    font-size 15px

  & ul li ul
    display none
    padding 12px 0
    width 882px
    height 495px
    margin 0
    position absolute
    margin-left 251px
    top 266px
    background $white
    border 1px solid $border-color
    z-index 10
    border-radius 3px
    -webkit-padding-start 0
    float left

  & ul>li>ul>li
    margin-left 30px
    font-size $font-size+3
    margin-bottom 12.5px
    list-style-type none
    -webkit-padding-start 0
    line-height normal
    font-weight 400
    font-family $font
    line-height normal
    text-transform none
    float left
    width 33%

  & ul>li>ul>li>a
    text-decoration none
    color #3f4647
    cursor pointer
    font-weight 400
    font-size $font-size+2
    &:hover
      color #00a2e5
      cursor pointer


  &--hover__right
    float right
    width 290px
    border-left 1px solid $border-color
    height 100%

  &--no-display
    display none