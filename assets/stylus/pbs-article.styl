.pbs-article
  height 202px
  width 779px
  border 1px solid #DDDDDD
  border-radius 3px
  padding 18px 48px 18px 25px
  box-shadow 0px 4px 8px 0px rgba(0, 0, 0, 0.1)
  -webkit-box-shadow 0px 4px 8px 0px rgba(0, 0, 0, 0.1)
  -moz-box-shadow 0px 4px 8px 0px rgba(0, 0, 0, 0.1)
  margin-bottom 20px
  &--active
    height 200px
    width 779px
    border 2px solid #fd7900
    border-radius 3px
    padding 18px 46px 18px 25px

  &__img
    margin-right 30px
    float left

  &__title
    font-family $font
    font-size $font-size+6
    font-weight 500
    color $second-font-color
    margin-bottom 22px

  &__text
    color #555555
    font-family $font
    font-size $font-size+2

