.circle
  width 94px
  height 94px
  float left
  border-radius 100px
  text-align center
  margin 0 20px 0 20px

  &--tab
    width 28px
    height 28px
    border-radius 32px
    line-height 28px
    color #f3f3f3
    border 2px solid #f3f3f3
    font-size $font-size+8
    margin 0

  &__text
    line-height 100px
    text-decoration none
    color #333333
    font-size $font-size+18
    font-family $font
    font-weight 400

  &--social
    border 1px solid $white
    color $white
    width 40px
    height 40px
    float left
    border-radius 40px
    text-align center
    margin 0 10px 0 10px
    line-height 40px
  &--p-social
    width 40px
    height 40px
    float left
    border-radius 40px
    text-align center
    margin 0 8px 0 0
    line-height 40px

  &--vk
    border 1px solid #1f72a3
    background #1f72a3
  &--ok
    border 1px solid #f4960f
    background #f4960f
  &--fb
    border 1px solid #21599e
    background #21599e
  &--twitter
    border 1px solid #01abf0
    background #01abf0
  &--youtube
    border 1px solid #e70505
    background #e70505

  &--arrow
    width 28px
    height 28px
    border-radius 28px
    text-align center
    border 2px solid $white
    margin 0
    &:hover
      width 28px
      height 28px
      border-radius 28px
      text-align center
      border 2px solid #e7582a
      color #e7582a

  &--cart
    width 22px
    height 22px
    border-radius 22px
    color $white
    background #e8582b
    position absolute
    line-height 22px
    top 30px
    right -30px
    z-index 10

  &--hide
    display none