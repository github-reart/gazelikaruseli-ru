.price
  &--buy-block
    margin-left 23px
    margin-top 30px

  &__price
    font-size $font-size+18
    font-family  $font
    color $second-font-color
    font-weight 500
  &__text
    font-size $font-size+10
    color $second-font-color
    font-family $font
    margin-right 10px
    font-weight 500
  &__price--page-cart
    font-size $font-size+10
    font-family  $font
    color $second-font-color
    font-weight 500
  &__text--page-cart
    font-size $font-size+4
    color $second-font-color
    font-family $font
    margin-right 10px
    font-weight 500
  &__price--discount-page-cart
    text-decoration line-through
    color #999999
    font-size $font-size+2
    font-weight 400

  &__price--discount
    text-decoration line-through
    color #999999
    font-size $font-size+6
    font-weight 400
  &__text--discount
    text-decoration line-through
    color #999999
    font-size $font-size+6
    font-weight 400

  &__price--checkout
    font-size $font-size+14
    color $second-font-color
    font-family $font
    margin-right 10px
    font-weight 500

  &__text--checkout
    font-size $font-size+6
    color $second-font-color
    font-family $font
    margin-right 10px
    font-weight 500

  &__price--checkout-buy-box
    font-size $font-size+14
    color $second-font-color
    font-family $font
    font-weight 400

  &__text--checkout-buy-box
    font-size $font-size+6
    color $second-font-color
    font-family $font
    font-weight 400

  &--cart-price
    font-size $font-size+6
    color $second-font-color
    font-family $font
    font-weight 500

  &--cart-text
    font-size $font-size+2
    color $second-font-color
    font-family $font
    font-weight 500