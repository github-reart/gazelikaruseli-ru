.delivery-type-box
  width 320px
  height 220px
  border 1px solid #DDDDDD
  position relative
  text-align center
  float left
  margin-left 30px
  margin-right 26px
  margin-bottom 21px

  &--active
    width 318px
    height 218px
    border 2px solid #7cbb22

  &__this-type
    position absolute
    top 10px
    left 10px

  &__this-type--hide
    display none

  &__green-circle
    float none
    margin 0 auto
    margin-top 48px
    width 80px
    height 80px

  &__icon-type
    position relative
    top 28px
    float none

  &__title
    color #303030
    font-size $font-size+6
    font-family $font
    margin-top 27px
    margin-bottom 15px

  &__desc
    color #555555
    font-size $font-size+1
    font-family $font
    font-weight 400